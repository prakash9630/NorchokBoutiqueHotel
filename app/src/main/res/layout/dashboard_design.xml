<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/apartment_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_icon_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.automarks.nuzatech.norchok.activity.RoundRectCornerImageView
                android:id="@+id/dash_image"
                android:layout_width="match_parent"


                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_landingpage_buttom"
                android:layout_marginLeft="@dimen/margin_on_landingpage"
                android:layout_marginRight="@dimen/margin_on_landingpage"
                android:layout_marginTop="@dimen/margin_landingpage_buttom"
                android:scaleType="centerCrop"

                android:src="@drawable/apartmentpic" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_landingpage_buttom"
                android:layout_marginLeft="@dimen/margin_on_landingpage"
                android:layout_marginRight="@dimen/margin_on_landingpage"
                android:layout_marginTop="@dimen/margin_landingpage_buttom"
                android:background="@drawable/landingpageradious"></LinearLayout>


            <TextView
                android:id="@+id/dash_title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/landing_text_margin"
                android:text="Apartments"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_landingpage"
                android:textStyle="bold" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>